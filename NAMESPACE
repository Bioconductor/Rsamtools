useDynLib(Rsamtools, .registration=TRUE)

importFrom(utils, normalizePath, read.table)

import(IRanges)

importFrom(GenomicRanges, strand)

importClassesFrom(GenomicRanges, GappedAlignments, Alignments0,
                  Alignments1, Alignments2)

importClassesFrom(Biostrings, file, connection, DNAStringSet,
                  BStringSet, PhredQuality)

importFrom(Biostrings, DNA_ALPHABET, DNAStringSet, BStringSet,
           PhredQuality)

exportClasses(ScanBamParam, Cigar, BamViews)

exportPattern("^[^\\.]")

exportMethods(length, names, "[", "[[", show)
