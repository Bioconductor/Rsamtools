useDynLib(Rsamtools, .registration=TRUE)

import(methods)

importFrom(utils, normalizePath, read.table)

importClassesFrom(IRanges, Sequence, DataTableORNULL, Annotated,
                  Ranges, IRanges, RangesList, IRangesList, RangedData)
importFrom(IRanges, isSingleString, isTRUEorFALSE,
           IRanges, RangesList, IRangesList, RangedData)
importMethodsFrom(IRanges, coerce, end, endoapply, space, start, unlist, width)

importClassesFrom(Biostrings, DNAStringSet, BStringSet, PhredQuality)
importFrom(Biostrings, DNA_ALPHABET, DNAStringSet, BStringSet, PhredQuality)

importFrom(BSgenome, strand)


exportClasses(ScanBamParam, Cigar)

exportPattern("^[^\\.]")

exportMethods(length, names, "[", "[[", show)
